@model FIT5032_Assignment_frez0003.Models.Reg_Customer

@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Signup</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Provide information for signup</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.C_Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.C_Email, new { htmlAttributes = new { @class = "form-control" ,  title = "Input your Email id", tabindex = 0 } })
            @Html.ValidationMessageFor(model => model.C_Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.C_Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.C_Password, new { htmlAttributes = new { @class = "form-control" , tabindex = 1} })
            @Html.ValidationMessageFor(model => model.C_Password, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.C_Confirm_Password, htmlAttributes: new { @class = "control-label col-md-2", tabindex = 2})
        <div class="col-md-10">
            @Html.PasswordFor(model => model.C_Confirm_Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.C_Confirm_Password, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.CF_Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CF_Name, new { htmlAttributes = new { @class = "form-control",  title = "Input your First Name" } })
            @Html.ValidationMessageFor(model => model.CF_Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CL_Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CL_Name, new { htmlAttributes = new { @class = "form-control",  title = "Input your Last Name", tabindex = 3 } })
            @Html.ValidationMessageFor(model => model.CL_Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.C_Phone, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.C_Phone, new { htmlAttributes = new { @class = "form-control" ,  title = "Input your Phone Number"} })
            @Html.ValidationMessageFor(model => model.C_Phone, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Signup" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Click to login", "Login")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
